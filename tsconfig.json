{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "ts-node": {
        "files": true
    },
    "files": ["src/types/express.d.ts"],
    "include": ["src/**/*", "src/internal/config/config.ts"],
    "exclude": ["node_modules", "dist"]
}
